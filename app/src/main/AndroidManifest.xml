<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <!-- con estos elementos, estaríamos desbloquedano la búsqueda de apps candidatas
    a la hora de lanzar un intent implícito con estos valores: en este caso: seleccionar un
    telefóno del Content provider de contactos
    Este filtrado es a partir de ANDROID 11
    https://developer.android.com/training/package-visibility?hl=es-419
    -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PICK" />
            <data
                android:host="com.android.contacts"
                android:pathPrefix="/data/phones"
                android:scheme="content" />
        </intent>
    </queries>

    <!--query más general para el mismo propósito-->
    <queries>
        <provider android:authorities="com.android.contacts" />
    </queries>


    <permission
        android:name="edu.cas.PERMISO_APP"
        android:label="permiso_personalizado"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CNTGSYM">
        <activity
            android:name=".contactos.SeleccionContactosActivityPermisos"
            android:exported="false" />
        <activity
            android:name=".contactos.SeleccionContactosActivity"
            android:exported="false" />
        <activity
            android:name=".ActividadB"
            android:exported="true"
            android:permission="edu.cas.PERMISO_APP">
            <intent-filter>
                <action android:name="edu.cas.cntgsym.Saludo" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>